<div class  = "container">
<% if @user.errors.any? %>
<h2>The following error or errors occured</h2>
<ul>
<% @user.errors.full_messages.each do |msg|%>
   <li> <%= msg %> </li>
  <% end %>
</ul>
<% end %>
<div class= "row justify-content-center">
<div class = "col-10">
<%= form_with( model: @user, class:"shadow-p-3 mb-5 bg-info rounded", local: true) do |f| %>
  <div class= "form-group row">
<%= f.label :username, class: "col-2 col-form-label"%> 
<div class = "col-10">
<%=  f.text_field :username, class: "form-control", placeholder: "Enter Username" %>
</div>
</div>

<div class= "form-group row">
<%= f.label :email, class: "col-2 col-form-label"%> 
<div class = "col-10">
<%=  f.text_area :email, class: "form-control", placeholder: "Enter Email"%>
</div>
</div>

<div class= "form-group row">
<%= f.label :password, class: "col-2 col-form-label"%> 
<div class = "col-10">
<%=  f.password_field :email, class: "form-control", placeholder: "Enter Password"%>
</div>
</div>

<div class= "form-group row justify-content-center">
<div class = "container ml-5">
<%= f.submit class: "btn btn-outline-dark btn-sm"%>
</div>
</div>

<%end%>
</div>
<%= link_to 'Return to posts ',posts_path%> 
</div>
</div>

