<h1>Welcome To Our Club</h1>
<table>
    <thead>
        <tr>
            <th>
            Stat Us
            </th>
            <th>
            Update
            </th>
            <th colspan = "3">
            Options
            </th>
        </tr>
    </thead>
    <tbody> 
    <% @posts.each do |post| %>
        <tr>
            <td> <%=post.title %></td>
            <td>  <%=post.description %> </td>
            <td><%= link_to 'Delete',post_path(post), method: :delete, data: { confirm: "You sure?"} %></td>
            <td><%= link_to 'Show',post_path(post)%></td>
            <td><%= link_to 'Edit',edit_post_path(post)%></td>


        </tr>
        <% end%>

    </tbody>
</table>

<p>
<td><%= link_to 'New Post',new_post_path%></td>
</p>